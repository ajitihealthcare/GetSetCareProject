<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/white</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BorderlessButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


</resources>