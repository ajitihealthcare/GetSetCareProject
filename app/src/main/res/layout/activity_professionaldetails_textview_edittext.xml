<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/viewProfessionalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/professionDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Profession"
                    android:id="@+id/nameLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/profession"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView android:id="@+id/educationalDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Educational Details"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/grey"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/countryDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Country"
                    android:id="@+id/countryLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/country"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/qualificationDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Qualification"
                    android:id="@+id/qualificationLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/qualification"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/collegeDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="College"
                    android:id="@+id/collegeLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/college"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/universityDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="University"
                    android:id="@+id/universityLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/university"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <TextView android:id="@+id/practiceDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Practice Details"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_marginTop="220dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/grey"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/orgnizationDetails">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Organization Name"
                    android:id="@+id/orgnizationLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/orgnization"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/areaOfPractiseDetails">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Area Of Practise"
                    android:id="@+id/areaOfPractiseLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/areaOfPractise"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/yearsOfExperienceDetails">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Years Of Experience"
                    android:id="@+id/yearsOfExperienceLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/yearsOfExperience"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView android:id="@+id/expertiseDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expertise Details"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_marginTop="360dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/grey"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="410dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/diseasesDetails">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Diseases"
                    android:id="@+id/diseasesLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/diseases"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="440dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/proceduresDetails">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Procedures"
                    android:id="@+id/proceduresLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/procedures"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                android:layout_marginTop="510dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/openEditProfessionalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/viewProfessionalDetails"
            android:layout_above="@id/openEditProfessionalDetails"
            >
            <EditText android:id="@+id/professionField"
                android:layout_marginTop="10dp"
                android:hint="Profession"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:textSize="15sp"
                android:lines="1"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Educational Details"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_marginTop="60dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">
                <AutoCompleteTextView
                    android:id="@+id/countryField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:hint="Country"
                    android:textColorHint="@color/black"
                    android:dropDownHeight="250dp"
                    android:verticalScrollbarPosition="right"
                    android:textColor="@color/black"
                    android:inputType="textAutoComplete|textNoSuggestions"
                    android:lines="1"
                    android:layout_marginTop="110dp"
                    android:backgroundTint="@color/black">
                </AutoCompleteTextView>
                <EditText
                    android:id="@+id/qualificationField"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:hint="Qualification"
                    android:textSize="15sp"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="College Name"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:id="@+id/collegeName"
                    android:inputType="textNoSuggestions"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="University"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:id="@+id/universityName"
                    android:inputType="textNoSuggestions"/>
                </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Practice Details"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_marginTop="320dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

              <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Area of Practice"
                    android:layout_marginTop="370dp"
                    android:textSize="15sp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:id="@+id/areaOfPracticeName"
                    android:inputType="textNoSuggestions"/>
        <EditText
            android:id="@+id/practisingField"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:hint="Practising from"
            android:textSize="15sp"
            android:lines="1"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organization Name"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:id="@+id/organizationName"
            android:inputType="textNoSuggestions"/>
          </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expertise Details"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_marginTop="520dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diseases"
            android:layout_marginTop="590dp"
            android:textSize="15sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:id="@+id/diseasesName"
            android:inputType="textNoSuggestions"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Procedures"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:id="@+id/procedureName"
            android:inputType="textNoSuggestions"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="650dp">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/updateEducationalDetails"
                        android:text="Update"
                        android:background="@drawable/roundshapebutton"/>
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Cancel"
                        android:id="@+id/cancleEducationalDetails"
                        android:background="@drawable/roundshapebutton"/>
                </LinearLayout>
    </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>


