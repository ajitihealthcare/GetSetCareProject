<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/viewAccountAuthDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/mobileDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Mobile No"
                    android:id="@+id/mobileNoLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 8790662966"
                    android:layout_marginTop="5dp"
                    android:id="@+id/mobileNo"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/emailDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Email Address"
                    android:id="@+id/emailLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="anjir@gmail.com"
                    android:layout_marginTop="5dp"
                    android:id="@+id/email"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/idProofDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ID Proof type"
                    android:id="@+id/idProofLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aadhar Card"
                    android:layout_marginTop="5dp"
                    android:id="@+id/idProofType"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/idProofNoDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="ID Proof No."
                    android:layout_marginTop="5dp"
                    android:id="@+id/idProofNoLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="232112312321"
                    android:layout_marginTop="15dp"
                    android:id="@+id/idProofNo"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/imageName"
                android:textSize="15sp"
                android:text="Aadhar Card.png"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteImage"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                android:src="@drawable/ic_action_delete"/>
            </RelativeLayout>
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="10dp"
                    android:text="Degree Certificates    :"
                    android:id="@+id/degreeCertificateLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageNames"
                    android:textSize="15sp"
                    android:text="Aadhar Card.png"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deleteImageDetails"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="120dp"
                    android:src="@drawable/ic_action_delete"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/medicalRegistrationDetails">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Medical Registration Number"
                    android:id="@+id/medicalRegistrationLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MID93439"
                    android:layout_marginTop="5dp"
                    android:id="@+id/medicalRegistrationNumber"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/medicalCouncilDetails">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Medical Council"
                    android:id="@+id/medicalCouncilLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:layout_marginTop="5dp"
                    android:id="@+id/medicalCouncilData"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="10dp"
                android:text="Medical Registration Copy    :"
                android:id="@+id/medicalRegistrationCopyLabel"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageNamesDetails"
                    android:textSize="15sp"
                    android:text="MRcopy.png"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deleteRegistrationCopyImageDetails"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="120dp"
                    android:src="@drawable/ic_action_delete"/>
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:shadowColor="@color/shadow_grey"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:id="@+id/editAuthDetails"
                android:layout_marginTop="500dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/openEditAccountAuthDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/viewAccountAuthDetails"
            android:layout_above="@id/openEditAccountAuthDetails"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/countrycode"
                    android:hint="+91"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Mobile No"
                    android:textSize="15sp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:id="@+id/phone"
                    android:inputType="phone"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:hint="Email"
                    android:text=""
                    android:lines="1"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/emailId"
                    android:inputType="textEmailAddress|textNoSuggestions"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <EditText android:id="@+id/idProofTypeField"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:hint="ID Proof Type"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:textSize="15sp"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:hint="ID Proof No"
                    android:text=""
                    android:lines="1"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/idProofNoField"
                    android:inputType="textNoSuggestions"/>
                </android.support.design.widget.TextInputLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/uploadidProofNo_list"
                    android:drawableRight="@drawable/ic_action_delete"
                    android:scrollbars="vertical">
                </android.support.v7.widget.RecyclerView>
                    <android.support.design.widget.FloatingActionButton
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/uploaddefault"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="0dp"
                        android:tint="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_alignRight="@+id/uploadidProofNo_list"
                        android:src="@drawable/ic_add_plus"/>
                </RelativeLayout>
                <TextView
                    android:text="Degree Certificates  :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/degreeCertificates"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/uploadDegreeCertificates_list"
                        android:drawableRight="@drawable/ic_action_delete"
                        android:scrollbars="vertical">
                    </android.support.v7.widget.RecyclerView>
                    <android.support.design.widget.FloatingActionButton
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/uploaddefaultDetails"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="0dp"
                        android:tint="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_alignRight="@+id/uploadDegreeCertificates_list"
                        android:src="@drawable/ic_add_plus"/>
                </RelativeLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:hint="Medical Registration Number*"
                    android:text=""
                    android:lines="1"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/medicalRegistrationNumberField"
                    android:inputType="textNoSuggestions"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black"
                    android:hint="Medical Council"
                    android:text=""
                    android:lines="1"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/medicalCouncilField"
                    android:inputType="textNoSuggestions"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:text="Medical Registration Copy*"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/medicalRegistraionCopyDetails"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/uploadMedicalRegistrationCopy_list"
                        android:drawableRight="@drawable/ic_action_delete"
                        android:scrollbars="vertical">
                    </android.support.v7.widget.RecyclerView>
                    <android.support.design.widget.FloatingActionButton
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/uploadDefaultRegistrationCopyDetails"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        app:backgroundTint="@color/colorPrimary"
                        app:elevation="0dp"
                        android:tint="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_alignRight="@+id/uploadMedicalRegistrationCopy_list"
                        android:src="@drawable/ic_add_plus"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/updateEducationalDetails"
                        android:text="Update"
                        android:background="@drawable/roundshapebutton"/>
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Cancel"
                        android:id="@+id/cancleEducationalDetails"
                        android:background="@drawable/roundshapebutton"/>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>
</ScrollView>
</LinearLayout>



