<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/viewPersonalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/images"
                    android:layout_marginTop="25dp"
                    android:id="@+id/imageView"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/nameDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Name"
                    android:id="@+id/nameLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/name"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/dobDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="DOB"
                    android:id="@+id/dobLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/dob"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/ageDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Age"
                    android:id="@+id/ageLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/age"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/genderDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Gender"
                    android:id="@+id/genderLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/gender"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/bloodGroupDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="BloodGroup"
                    android:id="@+id/bloodGroupLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/bloodGroup"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/maritalStatusDetails">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Marital Status"
                    android:id="@+id/maritalStatusLabel"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <include layout="@layout/text_view_seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/maritalStatus"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                android:layout_marginTop="480dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/openEditPersonalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/viewPersonalDetails"
            android:layout_above="@id/openEditPersonalDetails"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/uploadpic"
                        android:layout_marginTop="25dp"
                        android:id="@id/image"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:textColorHint="@color/black"
                    android:inputType="textNoSuggestions"
                    android:textSize="15sp"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:id="@+id/firstname"/>
                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:textColorHint="@color/black"
                    android:inputType="textNoSuggestions"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"/>
                <EditText android:id="@+id/reg_dob"
                    android:layout_width="match_parent"
                    android:hint="Date Of Birth"
                    android:textColorHint="@color/black"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/icon_date"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="20dp"/>
                <EditText
                    android:id="@+id/ageCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:textColorHint="@color/black"
                    android:inputType="textNoSuggestions"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"/>
                <EditText android:id="@+id/genderField"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:hint="Gender"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:textSize="15sp"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText android:id="@+id/bloodGroupField"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:hint="Blood Group"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:textSize="15sp"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText android:id="@+id/maritalStatusField"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:hint="Marital Status"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:textSize="15sp"
                    android:lines="1"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/updatePersonalDetails"
                        android:text="Update"
                        android:background="@drawable/roundshapebutton"/>
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Cancel"
                        android:id="@+id/canclePersonalDetails"
                        android:background="@drawable/roundshapebutton"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>